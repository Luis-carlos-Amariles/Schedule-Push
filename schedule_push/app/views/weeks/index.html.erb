<div class="container w100">
  <div class="row">
    <div class="col-md-12">
      <%= render 'layouts/notice_mvc' %>
      <div class="col-md-12">
        <h1 class="pull-left mb4">Listing Wek Days</h1>
        <%= link_to 'New Week Day', new_week_path, class:'btn btn-primary btn-sm pull-right tcw mb4' %>
      </div>
      <div class="col-md-10 offset-md-1 mt5">
        <table class="table table-hover table-sm mt5">
          <thead>
            <tr>
              <th>Week Day</th>
              <th>Number Day</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @weeks.each do |week| %>
              <tr>
                <td><%= week.week_day %></td>
                <td><%= week.number_day %></td>
                <td><%= link_to "<i class='fa fa-pencil fs13'></i>".html_safe, edit_week_path(week), class:'tcw fs10', :'data-toggle'=>'tooltip', title:'EDITAR' %></td>
                <td><%= link_to "<i class='fa fa-trash fs13'></i>".html_safe, week, method: :delete, data: { confirm: 'Estas Segur@ ?' }, class:'tcw fs10', :'data-toggle'=>'tooltip', title:'ELIMINAR' %></td>
              </tr>
            <% end %>
          </tbody>
          <% if @weeks.count > 8 %>
            <tfoot class="bg10 bd4">
              <tr>
                <th>Week Day</th>
                <th>Number Day</th>
                <th colspan="3"></th>
              </tr>
            </tfoot>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
