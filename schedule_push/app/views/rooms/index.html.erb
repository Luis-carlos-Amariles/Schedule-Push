<div class="container w100">
  <div class="row">
    <div class="col-md-12">
      <%= render 'layouts/notice_mvc' %>
      <div class="col-md-12">
        <h1 class="pull-left mb4">Listing Rooms</h1>
        <%= link_to 'New Room', new_room_path, class:'btn btn-primary btn-sm pull-right tcw mb4' %>
      </div>
      <div class="col-md-10 offset-md-1 mt5">
        <table class="table table-hover table-sm mt5">
          <thead>
            <tr>
              <th>Code</th>
              <th>Name</th>
              <th>Floor</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @rooms.each do |room| %>
              <tr>
                <td><%= room.code %></td>
                <td><%= room.name %></td>
                <td><%= room.floor %></td>
                <td><%= link_to "<i class='fa fa-pencil fs13'></i>".html_safe, edit_room_path(room), class:'tcw fs10', :'data-toggle'=>'tooltip', title:'EDITAR' %></td>
                <td><%= link_to "<i class='fa fa-trash fs13'></i>".html_safe, room, method: :delete, data: { confirm: 'Estas Segur@ ?' }, class:'tcw fs10', :'data-toggle'=>'tooltip', title:'ELIMINAR' %></td>
              </tr>
            <% end %>
          </tbody>
          <% if @rooms.count > 5 %>
            <tfoot class="bg10 bd4">
              <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Floor</th>
                <th colspan="3"></th>
              </tr>
            </tfoot>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

