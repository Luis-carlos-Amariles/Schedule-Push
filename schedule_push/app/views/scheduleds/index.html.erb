<div class="container w100">
  <div class="row">
    <div class="col-md-12">
      <%= render 'layouts/notice_mvc' %>
      <div class="col-md-12">
        <h1 class="pull-left mb4">Listing Scheduleds</h1>
        <%= link_to 'New Scheduled', new_scheduled_path, class:'btn btn-primary btn-sm pull-right tcw mb4' %>
      </div>
      <div class="col-md-10 offset-md-1 mt5">
        <table class="table table-hover table-sm mt5">
          <thead>
            <tr>
              <th>Block</th>
              <th>Hour</th>
              <th>Week Day</th>
              <th>Teacher - Matter</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @scheduleds.each do |scheduled| %>
              <tr>
                <td><%= scheduled.block %></td>
                <td><%= scheduled.start_hour.to_s.insert(1, ':') %></td>
                <td><%= scheduled.teacher_by_matter.teacher_with_matter if scheduled.teacher_by_matter.present? %></td>
                <td><%= scheduled.week.week_day if scheduled.week.present? %></td>
                <td><%= link_to "<i class='fa fa-pencil fs13'></i>".html_safe, edit_scheduled_path(scheduled), class:'tcw fs10', :'data-toggle'=>'tooltip', title:'EDITAR' %></td>
                <td><%= link_to "<i class='fa fa-trash fs13'></i>".html_safe, scheduled, method: :delete, data: { confirm: 'Estas Segur@ ?' }, class:'tcw fs10', :'data-toggle'=>'tooltip', title:'ELIMINAR' %></td>
              </tr>
            <% end %>
          </tbody>
          <% if @scheduleds.count > 8 %>
            <tfoot class="bg10 bd4">
              <tr>
                <th>Block</th>
                <th>Hour</th>
                <th>Week Day</th>
                <th>Teacher - Matter</th>
                <th colspan="3"></th>
              </tr>
            </tfoot>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
