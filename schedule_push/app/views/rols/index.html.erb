<div class="container w100">
  <div class="row">
    <div class="col-md-12">
      <%= render 'layouts/notice_mvc' %>
      <div class="col-md-12">
        <h1 class="pull-left mb4">Listing Rols</h1>
        <% if @rols.count < 3 %>
          <%= link_to 'New Rol', new_rol_path, class:'btn btn-primary btn-sm pull-right tcw mb4' %>
        <% end %>
      </div>
      <div class="col-md-10 offset-md-1 mt5">
        <table class="table table-hover table-sm mt5">
          <thead>
            <tr>
              <th>Name</th>
              <th>Code</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @rols.each do |rol| %>
              <tr>
                <td><%= rol.name %></td>
                <td><%= rol.code %></td>
                <td>
                  <% unless rol.code == 100 %>
                    <%= link_to "<i class='fa fa-pencil fs13'></i>".html_safe, edit_rol_path(rol), class:'tcw fs10', :'data-toggle'=>'tooltip', title:'EDITAR' %>
                  <% end %>
                </td>
                <td>
                  <% unless rol.code == 100 %>
                    <%= link_to "<i class='fa fa-trash fs13'></i>".html_safe, rol, method: :delete, data: { confirm: 'Estas Segur@ ?' }, class:'tcw fs10', :'data-toggle'=>'tooltip', title:'ELIMINAR' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <% if @rols.count > 5 %>
            <tfoot class="bg10 bd4">
              <tr>
                <th>Name</th>
                <th>Code</th>
                <th colspan="3"></th>
              </tr>
            </tfoot>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

