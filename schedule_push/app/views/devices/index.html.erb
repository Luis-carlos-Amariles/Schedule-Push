<div class="container w100">
  <div class="row">
    <div class="col-md-12">
      <%= render 'layouts/notice_mvc' %>
      <div class="col-md-12">
        <h1 class="pull-left mb4">Listing Devices</h1>
        <%= link_to 'New Device', new_device_path, class:'btn btn-primary btn-sm pull-right tcw mb4' %>
      </div>
      <div class="col-md-10 offset-md-1">
        <table class="table table-hover table-sm mt5">
          <thead>
            <tr>
              <th>Token</th>
              <th>Installation</th>
              <th>App</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @devices.each do |device| %>
              <tr>
                <td><%= device.token.first(10) %></td>
                <td><%= device.installation_id.first(10) %></td>
                <td><%= device.app.name %></td>
                <td><%= link_to "<i class='fa fa-pencil fs13'></i>".html_safe, edit_device_path(device), class:'tcw fs10', :'data-toggle'=>'tooltip', title:'EDITAR' %></td>
                <td><%= link_to "<i class='fa fa-trash fs13'></i>".html_safe, device, method: :delete, data: { confirm: 'Estas Segur@ ?' }, class:'tcw fs10', :'data-toggle'=>'tooltip', title:'ELIMINAR' %></td>
              </tr>
            <% end %>
          </tbody>
          <% if @devices.count > 5 %>
            <tfoot class="bg10 bd4">
              <tr>
                <th>Token</th>
                <th>Installation</th>
                <th>App</th>
                <th colspan="3"></th>
              </tr>
            </tfoot>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
