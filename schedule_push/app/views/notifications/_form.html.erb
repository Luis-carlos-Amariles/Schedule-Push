<div class="container w100">
  <div class="row w80">
    <%= link_to '<i class="fa fa-arrow-left fs12 tcw"></i>'.html_safe, notifications_path, class:'pull-right inlb' %>
    <div class="title-content inlb">
      <h3><%= title %></h3>
    </div>
    <div class="col-md-12">
      <div class="ls1 col-md-10 offset-md-1 pd20">
        <%= form_for(@notification, html:{class:'bg10 pd10 bd10 col-md-8 offset-md-2'}) do |f| %>
          <%= render 'layouts/errors', object: @notification %>
          <label class="sr-only mt5" for="semester_number">Message</label>
          <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-addon"><i class="fa fa-envelope tcbl fs11"></i> </div>
            <%= f.text_area :message, class:'form-control bd1 validate_length', placeholder:'Message', required: true, maxlength:'160' %>
          </div>

          <label class="sr-only mt5" for="semester_number">Title</label>
          <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-addon"><i class="fa fa-file-o tcbl fs12"></i> </div>
            <%= f.text_field :title, class:'form-control bd1 validate_length', placeholder:'Title', required: true, maxlength:'40' %>
          </div>

          <label class="sr-only mt2" for="semester_level">Device</label>
          <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-addon"><i class="fa fa-phone tcbl fs9"></i></div>
            <%= f.select :device_id, options_for_select(@devices.collect{|d|[d.id, d.token.first(10)]}, @notification.device_id), {prompt:'Select The Device'}, {class:'form-control bd1 fs11', required: true, style:"height: 30px;"} %>
          </div>

          <div class="form-group">
            <%= f.submit 'Submit', class:'btn btn-primary btn-sm btn-bordered btn-block ds1' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

