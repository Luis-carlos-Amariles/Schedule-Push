<div class="container w100">
  <div class="row">
    <div class="col-md-12">
      <%= render 'layouts/notice_mvc' %>
      <div class="col-md-12">
        <h1 class="pull-left mb4">Listing Notifications </h1>
        <%= link_to 'New Notification', new_notification_path, class:'btn btn-primary btn-sm pull-right tcw mb4' %>
      </div>
      <div class="col-md-10 offset-md-1 mt5">
        <table class="table table-hover table-sm mt5">
          <thead>
            <tr>
              <th>Message</th>
              <th>Title</th>
              <th>Badge</th>
              <th>Sent</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @notifications.each do |notification| %>
              <tr>
                <td><%= notification.message.first(30) %></td>
                <td><%= notification.title %></td>
                <td><%= notification.badge %></td>
                <td><%= notification.send %></td>
                <td><%= link_to "<i class='fa fa-pencil fs13'></i>".html_safe, edit_notification_path(notification), class:'tcw fs10', :'data-toggle'=>'tooltip', title:'EDITAR' %></td>
                <td><%= link_to "<i class='fa fa-trash fs13'></i>".html_safe, notification, method: :delete, data: { confirm: 'Estas Segur@ ?' }, class:'tcw fs10', :'data-toggle'=>'tooltip', title:'ELIMINAR' %></td>
              </tr>
            <% end %>
          </tbody>
          <% if @notifications.count > 5 %>
            <tfoot class="bg10 bd4">
              <tr>
                <th>Message</th>
                <th>Title</th>
                <th>Badge</th>
                <th>Sent</th>
                <th colspan="3"></th>
              </tr>
            </tfoot>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
