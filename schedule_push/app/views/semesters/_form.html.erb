<div class="container w100">
  <div class="row w80">
    <%= link_to '<i class="fa fa-arrow-left fs12 tcw"></i>'.html_safe, semesters_path, class:'pull-right inlb' %>
    <div class="title-content inlb">
      <h3><%= title %></h3>
    </div>
    <div class="col-md-12">
      <div class="ls1 col-md-10 offset-md-1 pd20">
        <%= form_for(@semester, html:{class:'bg10 pd10 bd10 col-md-8 offset-md-2'}) do |f| %>
          <%= render 'layouts/errors', object: @semester %>
          <label class="sr-only mt5" for="semester_number">Number</label>
          <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-addon"><i class="fa fa-sort-numeric-asc tcbl fs12"></i> </div>
            <%= f.number_field :number, class:'form-control bd1 validate_length', placeholder:'Number', required: true, maxlength:'2' %>
          </div>

          <label class="sr-only mt2" for="semester_level">Level</label>
          <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-addon"><i class="fa fa-university tcbl fs9"></i></div>
            <%= f.select :level, options_for_select([['Technical', 'technical'],['Technologist', 'technologist'], ['Engineering', 'engineering'], @semester.level]), {prompt:'Level'}, {class:'form-control bd1 fs11', required: true, style:"height: 32px;"} %>
          </div>

          <div class="form-group">
            <%= f.submit 'Submit', class:'btn btn-primary btn-sm btn-bordered btn-block ds1' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
